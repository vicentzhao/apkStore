<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_main_blue"
    android:scrollbars="none"  >
    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" android:background="@drawable/bg_main_blue">
    
    
	 <LinearLayout android:id="@+id/app_single_info" android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="horizontal"> 
            <View android:layout_height="fill_parent" android:layout_width="0px" android:layout_weight="44"/>
            <LinearLayout android:layout_height="fill_parent" android:layout_width="0px" android:layout_weight="1080" android:orientation="vertical">
                <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                    <ImageView android:id="@+id/app_pic" android:layout_height="135dip" android:layout_width="28dip" android:layout_weight="100" android:layout_marginRight="8dip"/>
                    <RelativeLayout android:layout_height="fill_parent" android:layout_width="0px" android:layout_weight="731" android:layout_marginTop="15dip">
                        <TextView android:id="@+id/app_name" android:layout_width="395dip" android:layout_height="wrap_content" android:text="应用名称：" android:textColor="#ffffff" android:textSize="24sp" android:singleLine="true" android:ellipsize="end"/>
                        <TextView android:id="@+id/app_source" android:layout_width="395dip" android:layout_height="wrap_content" android:text="来源：" android:layout_toRightOf="@+id/app_name" android:textColor="#ffffff" android:textSize="24sp" android:singleLine="true" android:ellipsize="end"/>
                        <TextView android:id="@+id/app_author"  android:layout_width="395dip" android:layout_height="wrap_content" android:text="作者：" android:layout_below="@+id/app_name" android:textColor="#ffffff" android:textSize="24sp" android:singleLine="true" android:ellipsize="end"/>
                        <TextView android:id="@+id/app_version" android:layout_width="395dip" android:layout_height="wrap_content" android:text="版本：" android:layout_toRightOf="@+id/app_author" android:layout_below="@+id/app_source" android:textColor="#ffffff" android:textSize="24sp" android:singleLine="true" android:ellipsize="end"/>
                        <TextView android:id="@+id/app_grade" android:layout_width="395dip" android:layout_height="wrap_content" android:text="评分：" android:layout_below="@+id/app_author" android:textColor="#ffffff" android:textSize="24sp" android:singleLine="true" android:ellipsize="end"/>
                    </RelativeLayout>
                    <RelativeLayout android:layout_height="fill_parent" android:layout_width="0px" android:layout_weight="251" android:gravity="center">
                        <Button android:id="@+id/app_download" android:layout_width="150dip" android:layout_height="80dip" android:gravity="center" android:background="@drawable/select_button" android:text="@string/app_name_download" android:textSize="24sp" android:textColor="#ffffff"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1" android:orientation="vertical">
                    <View android:layout_width="fill_parent" android:layout_height="2dip" android:background="@drawable/divider_line_new"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="详细描述：" android:textSize="32sp" android:textColor="#ffffff"/>
                    <TextView android:id="@+id/app_comment" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="xxxxx" android:textColor="#ffffff" android:textSize="18sp" android:lines="3"/>
                    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                        <View android:layout_height="2dip" android:layout_width="0px" android:layout_weight="451" android:layout_gravity="center" android:background="@drawable/divider_line_new"/>
                        <View android:layout_height="fill_parent" android:layout_width="0px" android:layout_weight="31"/>
                        <TextView android:id="@+id/app_show_info" android:layout_height="55dip" android:layout_width="0px" android:layout_weight="116" android:text="查看更多" android:textColor="#ffffff" android:textSize="20sp" android:background="@drawable/select_button" android:gravity="center" android:focusable="true" android:clickable="true"/>
                        <View android:layout_height="fill_parent" android:layout_width="0px" android:layout_weight="31"/>
                        <View android:layout_height="2dip" android:layout_width="0px" android:layout_weight="451" android:layout_gravity="center" android:background="@drawable/divider_line_new"/>
                    </LinearLayout>
                    <Gallery android:id="@+id/app_gallery" android:layout_width="fill_parent" android:layout_height="287dip" android:gravity="center" android:spacing="20dip" />
                </LinearLayout>
            </LinearLayout>
            <View android:layout_height="fill_parent" android:layout_width="0px" android:layout_weight="44"/>
      </LinearLayout>
      
      <ProgressBar android:id="@+id/content_progressbar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:visibility="invisible"/>

</RelativeLayout>

</ScrollView>
